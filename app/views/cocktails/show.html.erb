
<div class="banner">
  <div class="banner-content">
    <h1><strong>Cocktail's time - Choose wisely</strong></h1>
  </div>
</div>

<div class="container">

  <h2><%= @cocktail.name %></h2>
  <%= link_to "Back to all cocktails", root_path %>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3>Description</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-sm-12 col-md-6">
      <%= link_to "Add ingredients", cocktail_doses_path(@cocktail, @dose) %>
    </div>
  </div>
</div>
