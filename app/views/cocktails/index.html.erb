<div class="banner">
  <div class="banner-content">
    <h1><strong>Cocktail's time - Choose wisely</strong></h1>
    <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
           <div class="card-header">
            <%= cocktail.name %>
            <%= cl_image_tag("https://res.cloudinary.com/dtpfc9kqr/image/upload/v1609873127/nikita-tikhomirov-7g00RqAiTRU-unsplash_txmkxf.jpg",
                  width: 200, height: 300, crop: :fill) %>
          </div>
          <div class="card-footer">
            <%= link_to 'Want to know more?', cocktail_path(cocktail), class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

